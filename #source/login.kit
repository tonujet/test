<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<link rel="stylesheet" href="assets/style/style.css" type="text/css">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Log in</title>
	<script src="https://kit.fontawesome.com/3b7eb551b6.js" crossorigin="anonymous"></script>

</head>
<body>
	<div class="wraper">
		<header class="header">
			<!-- @import "header.html" -->
		</header>
		<content class="content">
			<div class="content__form">
				<form action="" method="post" class="form" id="loginForm">
					<div class="form__logo form__login">
						<a href="index.html" title="logo"><img src="assets/img/logo.webp" alt=""></a>
					</div>
					<div class="form__inputs form__login">
						<label for="email">Email</label>
						<input required type="email" id="email" placeholder="lorem@example.com" name="email">
					</div>
					<div class="form__inputs form__login">
						<label for="password">Password</label>
						<input required type="password" id="password" name="password" placeholder="********">
					</div>
					<div class="form__inputs form__login">
						<button type="submit" form="loginForm">Log in</button>
					</div>
				</form>
			</div>
			
		</content>
		<footer class="footer">
			<!-- @import "footer.html" -->
		</footer>
	</div>
	
</body>
</html>